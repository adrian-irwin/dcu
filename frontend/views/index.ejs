<%- include('header', {title : 'Generic Clothes Shop'}) -%>

<div class="container-lg p-3">

    <div class="text-center mb-4">
        <h1>Generic Clothes Shop</h1>
        <p>A clothes shop that sells basic and unbranded pieces of clothing</p>
        <h3 id="user-greeting">Hello</h3>
    </div>

    <div class="row justify-content-center text-center">

        <div class="col-sm-4">
            <div class="card mb-4 border-danger border-2">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">View all the products that are available.</p>
                    <a href="/products" class="btn btn-danger">Go to Products</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4 authenticated">
            <div class="card mb-4 border-success border-2">
                <div class="card-body">
                    <h5 class="card-title">Basket</h5>
                    <p class="card-text">View the contents of your basket.</p>
                    <a href="/basket" class="btn btn-success">Go to Basket</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4 authenticated">
            <div class="card mb-4 border-primary border-2">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <p class="card-text">View all of your previous orders.</p>
                    <a href="/order" class="btn btn-primary">Go to Orders</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4 not-authenticated">
            <div class="card mb-4 border-info border-2">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <p class="card-text">Login to your account.</p>
                    <a href="/login" class="btn btn-info">Go to Login</a>
                </div>
            </div>
        </div>

        <div class="col-sm-4 not-authenticated">
            <div class="card mb-4 border-warning border-2">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <p class="card-text">Register as a new user.</p>
                    <a href="/register" class="btn btn-warning">Go to Register</a>
                </div>
            </div>
        </div>


    </div>

</div>

<script>
    let authCards = document.getElementsByClassName("authenticated");
    let notAuthCards = document.getElementsByClassName("not-authenticated");
    console.log(authCards)
    let accessToken = localStorage.getItem("access");
    let userGreeting = document.getElementById("user-greeting");
    if (accessToken) {
        for (let i = 0; i < notAuthCards.length; i++) {
            const element = notAuthCards[i];
            element.style.display = "none";
        }
        userGreeting.innerHTML += " " + localStorage.getItem("username");
    } else {
        for (let i = 0; i < authCards.length; i++) {
            const element = authCards[i];
            element.style.display = "none";
        }
        userGreeting.style.display = "none";
    }
</script>

<%- include('footer') -%>
